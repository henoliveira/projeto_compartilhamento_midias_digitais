    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceRoot}/app/",
            "args": [
                "main:app",
                "--reload",
                "--workers=4",
                "--host=0.0.0.0",
                "--port=1337"
            ],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Debug Unit Test",
            "type": "python",
            "request": "launch",
            "program": "app/local.py",
            "justMyCode": false,
        }
    ]
}